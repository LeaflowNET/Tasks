{
  "name": "02 第一个应用",
  "description": "创建你的第一个应用",
  "author": {
    "name": "cxykevin"
  },
  "amount": 8,
  "rules": {
    "and": [
      { "some": [
          { "var": "services" },
          { "and": [
              { "in": [ "first-app", { "var": "workload_name" } ] },
              { "some": [ { "var": "ports" }, { "==": [ { "var": "target_port" }, 80 ] } ] }
          ] }
      ]},
      { "some": [
          { "var": "deployments" },
          { "and": [
              { "in": [ "first-app", { "var": "name" } ] },
              { "==": [ { "var": "status" }, "Available" ] },
              { "some": [ { "var": "ports" }, { "==": [ { "var": "port" }, 80 ] } ] },
              { "some": [ { "var": "containers" }, { "in": [ "hello-leaflow", { "var": "image" } ] } ] }
          ] }
      ]}
    ]
  }
}